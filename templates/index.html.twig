<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome to Dog Breeds!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
        <link href="/styles/app.css" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <section class="mt-5">
            <div class="container">
                <div class="jumbotron text-center">
                    <h1>List of Dog Breeds</h1>
                    {% if showImages %}
                        <h2>- {{ breed|upper }} -</h2>
                    {% endif %}
                </div>
            </div>
        </section>
        <section>
            {% if showImages %}

                <div class="fixed-top btn btn-warning">
                    <a href="/">Back to Homepage</a>
                </div>

                {% for image in images %}
                    <div class="d-flex justify-content-center">
                        <img class="d-block w-100 p-3 rounded-pill" src={{ image }} style="width: 50% !important; height: 50%">
                    </div>
                {% endfor %}

            {% else %}

                <div class="container">
                    <div class="mt-5">
                        {% for breed in breeds %}
                            <div class="d-style btn btn-brc-tp border-2 bgc-white btn-outline-blue btn-h-outline-blue btn-a-outline-blue w-100 my-2 py-3 shadow-sm" style="background-color: beige;">
                                <div class="row align-items-center">
                                    <div class="col-12">
                                    <h4 class="pt-3 text-170 text-600 text-primary-d1 letter-spacing">
                                        <a href="/{{ breed }}">{{ breed|upper }}</a>
                                    </h4>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

        </section>
    </body>
</html>